{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend: Vite Dev Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal",
            "env": {
                "VITE_API_URL": "http://localhost:8000",
                "PORT": "5174"
            }
        },
        {
            "name": "Backend: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "python": "/home/ubuntu/.cache/pypoetry/virtualenvs/app-T5G3X0iE-py3.12/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                "DATABASE_MODE": "file",
                "DATABASE_PATH": "todo.db",
                "JWT_SECRET": "your-secret-key"
            },
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack: Frontend + Backend",
            "configurations": ["Frontend: Vite Dev Server", "Backend: FastAPI"]
        }
    ]
}
